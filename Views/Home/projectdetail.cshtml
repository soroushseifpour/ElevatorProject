@model ElevatorProject.Models.ElevatorTB
<h6 style="text-align: right;">@Model.ElevatorTitle</h6>
@if (!Model.ProjectDescription.IsEmpty())
{
       <p class="m-0px" style="text-align:right";>@Model.ProjectDescription</p>
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            int i = 1;
            foreach (var item in Model.ElevatormageTB)
            {
                if (i == 1)
                {

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/UploadedFiles/@item.ImageTB.ImageName" alt="@item.ImageTB.ImageName">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/UploadedFiles/@item.ImageTB.ImageName" alt="@item.ImageTB.ImageName">
                    </div>
                }
                i++;
            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
