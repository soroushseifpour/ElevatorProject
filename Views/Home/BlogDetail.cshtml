@model ElevatorProject.Models.BlogTB
@{
    ViewBag.Title = "کاتالوگ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<main class="text-right mb-4" style="display:flow-root;" dir="rtl" lang="fa">

    <!-- Page Title -->
    <section class="section page-title-section bg-center-center bg-cover" style="background-image: url(/Content/static/img/overlay-2.jpg);">
        <div class="container">
            <div class="page-title text-center">
                <h1>کاتالوگ ما</h1>
            </div>
            <ol class="breadcrumb justify-content-center">
                <li><a href="index.html">صفحه اصلی</a></li>
                <li class="active">کاتالوگ ما</li>
            </ol>
        </div>
    </section>
    <!-- / -->
    <!-- Our Team -->
    <div class="container mt-4 ">
        <div class="row justify-content-center m-25px-b md-m-20px-b">
            <div class="col-md-10 col-lg-5">
                <div class="section-title">
                    <h2 class="theme-after">@Model.BlogTitle</h2>
                </div>
            </div>
        </div>
        <div class="mt-4 ">

            @Html.Raw(WebUtility.HtmlDecode(Model.BlogText))
        </div>
    </div>
    <!-- / -->
</main>

@section Scripts
{
    <script>
        window.addEventListener("load", function () {
            var table = this.document.querySelectorAll('.table');
            table.forEach(t => {
                t.classList.add("table")
                t.classList.add("table-dark")
                t.classList.add("table-striped")
                // `element` is the element you want to wrap
                var parent = t.parentNode;
                console.log("hello")
                var wrapper = document.createElement('div');
                wrapper.classList.add("table-responsive");
                // set the wrapper as child (instead of the element)
                parent.replaceChild(wrapper, t);
                // set element as child of wrapper
                wrapper.appendChild(t);
            })
            //table.forEach(t => t.classList.add("table-responsive"))
            var ps = this.document.querySelectorAll('p')
            ps.forEach(p => p.style.fontSize = "medium")
        })
    </script>
}
